{
  "name": "@alwatr/storage-server",
  "version": "0.24.1",
  "description": "Alwatr Storage Server, Elegant micro in-memory json-like storage nanoservice with disk backed, Fastest NoSQL Database.",
  "type": "module",
  "keywords": [
    "database",
    "storage",
    "json",
    "nosql",
    "no-sql",
    "api",
    "data",
    "data-storage",
    "file",
    "microservice",
    "nanoservice",
    "typescript",
    "alwatr"
  ],
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AliMD/alwatr",
    "directory": "packages/service/storage-server"
  },
  "homepage": "https://github.com/AliMD/alwatr/tree/main/packages/service/storage-server#readme",
  "bugs": {
    "url": "https://github.com/AliMD/alwatr/issues"
  },
  "scripts": {
    "l": "yarn lint",
    "b": "yarn build",
    "cb": "run-s clean build",
    "s": "run-s clean build serve",
    "w": "yarn watch",
    "f": "yarn format",
    "fl": "yarn format:eslint",
    "fp": "yarn format:prettier",
    "start": "yarn serve",
    "lint": "run-s lint:*",
    "lint:ts": "eslint . --config .eslintrc.json --ext .ts",
    "build": "run-s build:*",
    "build:ts": "tsc --build",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "yarn lint:ts --fix",
    "format:prettier": "prettier \"**/*.{html,json,md,ts}\" --write",
    "clean": "rimraf dist/",
    "serve": "node dist/index.js",
    "serve:debug": "node --inspect dist/index.js",
    "watch": "run-s clean build && run-p watch:ts watch:node",
    "watch:node": "nodemon -w dist/ dist/index.js",
    "watch:debug-node": "nodemon -w dist/ --inspect dist/index.js",
    "watch:ts": "yarn build:ts --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@alwatr/logger": "^0.24.1",
    "@alwatr/nano-server": "^0.24.1",
    "@alwatr/storage-engine": "^0.24.1"
  },
  "devDependencies": {
    "@types/node": "~18.11.10",
    "@typescript-eslint/eslint-plugin": "~5.45.0",
    "@typescript-eslint/parser": "~5.45.0",
    "eslint": "~8.29.0",
    "eslint-config-google": "~0.14.0",
    "eslint-import-resolver-typescript": "~3.5.2",
    "eslint-plugin-import": "~2.26.0",
    "nodemon": "~2.0.20",
    "npm-run-all": "~4.1.5",
    "prettier": "~2.8.0",
    "rimraf": "~3.0.2",
    "typescript": "4.9.3"
  }
}
