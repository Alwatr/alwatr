{
  "version": "0.29.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "package": ["core/*", "services/*", "ui/*", "demo"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "message": "release: %s"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.md"]
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    },
    "run": {
      "stream": true
    }
  }
}
